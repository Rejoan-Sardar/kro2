{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Kro ResourceGraphDefinition",
  "scopeName": "source.kro",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#cel-expressions"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.kro",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.kro",
          "match": "\\b(apiVersion|kind|metadata|spec|resources|relations|parameters|type|description|template|required|default|enum|from|to|api|version)\\b"
        },
        {
          "name": "constant.language.kro",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.kro",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.kro",
              "match": "\\\\."
            },
            {
              "include": "#cel-expressions"
            }
          ]
        },
        {
          "name": "string.quoted.single.kro",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.kro",
              "match": "\\\\."
            },
            {
              "include": "#cel-expressions"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.integer.kro",
          "match": "\\b[0-9]+\\b"
        },
        {
          "name": "constant.numeric.float.kro",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        }
      ]
    },
    "cel-expressions": {
      "name": "meta.embedded.cel.kro",
      "begin": "{{",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.template.begin.kro"
        }
      },
      "end": "}}",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.template.end.kro"
        }
      },
      "patterns": [
        {
          "name": "keyword.operator.cel",
          "match": "\\b(in|as|or|and|not)\\b"
        },
        {
          "name": "constant.language.cel",
          "match": "\\b(true|false|null)\\b"
        },
        {
          "name": "variable.other.cel",
          "match": "\\b(params|resources|relations)\\.[a-zA-Z0-9_\\.]+\\b"
        },
        {
          "name": "string.quoted.double.cel",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.cel",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.cel",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.cel",
              "match": "\\\\."
            }
          ]
        }
      ]
    }
  }
}